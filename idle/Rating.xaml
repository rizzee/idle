<Window x:Class="idle.Rating"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:idle"
        mc:Ignorable="d"
        Title="Rating" Height="450" Width="800" Activated="Window_Activated" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="res/fon.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <ListBox x:Name="lt1" HorizontalAlignment="Left" Height="336" VerticalAlignment="Top" Width="216" Margin="304,74,0,0" Background="#FFF79292" FontFamily="Impact"/>
        <Label Content="|TABLE LEADER|" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="304,10,0,0" FontSize="36" FontFamily="Impact" Background="Transparent">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3D9018" Offset="0"/>
                    <GradientStop Color="#FFF79292" Offset="0.631"/>
                    <GradientStop Color="#FF725A1F" Offset="0.892"/>
                    <GradientStop Color="Black" Offset="0.959"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>

    </Grid>
</Window>
